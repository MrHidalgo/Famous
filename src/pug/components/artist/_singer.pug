section#singer.singer
  .singer__bg
  .c-grid
    .singer__wrapper
      .singer__wrapper-left
        .singer__slider
          .singer__slider--top
            include ../../macros/_swiperSingerView

          .singer__slider--bottom
            include ../../macros/_swiperSingerPreview


      .singer__wrapper-right
